#!/bin/bash

contains_path() {
    local var_name="$1"
    local pattern="$2"
    local var_value="${!var_name}"
    local path

    IFS=':' read -ra paths <<< "$var_value"
    for path in "${paths[@]}"; do
        [[ "$path" == $pattern ]] && return 0
    done
    return 1
}

remove_path() {
    local var_name="$1"
    local remove_path="$2"
    local var_value="${!var_name}"

    # Remove all instances of the path
    while contains_path $var_name $remove_path; do
        var_value=":${var_value}:"
        var_value="${var_value//:$remove_path:/:}"
        var_value="${var_value#:}"
        var_value="${var_value%:}"

        export "$var_name=$var_value"
    done
}

prepend_path() {
    local var_name="$1"
    local new_path="$2"
    local var_value="${!var_name}"

    # Only add if not already present
    contains_path "$var_name" "$new_path" || export "$var_name=$new_path${var_value:+:$var_value}"
}

echo "Setup SPARK @PROJECT_VERSION@ environment..."

remove_path LD_LIBRARY_PATH @SPARK_INSTALL_LIBDIR@
export LD_LIBRARY_PATH=@SPARK_INSTALL_LIBDIR@:$LD_LIBRARY_PATH

echo "SPARK environment ready!"
